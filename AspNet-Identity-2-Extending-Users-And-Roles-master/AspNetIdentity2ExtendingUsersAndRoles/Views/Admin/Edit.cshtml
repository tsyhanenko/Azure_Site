@model AspNetIdentity2ExtendingUsersAndRoles.Models.Good

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<
<style>
    .input-validation-error {
        background-color: lightcoral;
        border: 1px solid red;
    }

    .validation-summary-errors {
        color: red;
        font-size: 22px;
    }

    ul {
        list-style-type: none;
    }
</style>
<center>
    <h2>Редактирование</h2>


    @using (Html.BeginForm())
    {

        <div>
            @Html.ValidationSummary()
        </div>
        @Html.HiddenFor(x => x.GoodId)

        <div class="form-group">
            @Html.Label("Имя", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.GoodName, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>

        <div class="form-group">
            @Html.Label("Категория", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.GoodCategory, new { htmlAttributes = new { @class = "form-control" } }) </p>
        </div>
        <div class="form-group">
            @Html.Label("Описание", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.GoodDescription, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("Цена", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.GoodPrice, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>
        <div>
            <input type="submit" class="btn btn-outline-success" value="Сохранить">
        </div>
    }

</center>




