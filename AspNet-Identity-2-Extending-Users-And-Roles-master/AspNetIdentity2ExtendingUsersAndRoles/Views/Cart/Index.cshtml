@model IEnumerable<AspNetIdentity2ExtendingUsersAndRoles.Models.Good>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int Total = 0;
}


@foreach (var item in Model)
{
    Total += (item.GoodPrice * item.GoodCount);
}


<table class="table table-striped table-dark" style="margin-left:200px">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Count</th>
            <th scope="col">Price</th>

        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.GoodName</th>
                <td>@item.GoodDescription</td>
                <td>@item.GoodCount</td>
                <td>@item.GoodPrice</td>
                <td> @Html.ActionLink("Remove ", "Remove", "Cart", new { id = @item.GoodId }, new { @class = "btn btn-danger" })</td>
            </tr>

        }
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">Total Price:</th>
            <th scope="col">@Total.ToString()</th>
        </tr>


    </tbody>
</table>



